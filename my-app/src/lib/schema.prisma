generator client {
    provide = "prisma-client-js"
}
datasource db {
     provider = "postgresql" // or "mysql", "sqlite", etc.
  url      = env("DATABASE_URL")
}

model Meeting {
    id          Int      @id @default(autoincrement())
  title       String
  description String
  date        DateTime
  time        String
  location    String
  agenda      String
  organizer   String
  attendees   String[] // Array of attendee names
  status      String   @default("Scheduled") // e.g., Scheduled, Cancelled, Completed
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Indexes for faster queries
  @@index([date])
  @@index([location])
  @@index([status])
}
model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
}
