generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Contribution {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  amount   Float
  chamaaId String   @db.ObjectId
  date     DateTime @db.Date
  memberId String   @db.ObjectId
  month    BigInt
  status   String
  year     BigInt
}
  model Update {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  date        DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
}

model Loan {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  amount   Float
  duration BigInt
  purpose  String
  status   String
}

model Meeting {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  agenda      String
  chamaaId    String
  date        DateTime @db.Date
  description String
  location    String
  organizerId String
  status      String
  time        String
  title       String
}
  
model Payout {
 id          String   @id @default(auto()) @map("_id") @db.ObjectId
  roscaId   Int
  memberId  Int
  amount    Float
  status    String   @default("Pending")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

