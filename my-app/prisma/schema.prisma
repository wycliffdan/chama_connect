generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Contribution {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  amount   Float
  chamaaId String   @db.ObjectId
  date     DateTime @db.Date
  memberId String   @db.ObjectId
  month    BigInt
  status   String
  year     BigInt
}

model Loan {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  amount   Float
  duration BigInt
  purpose  String
  status   String
}
model Meeting {
   id       String @id @default(auto()) @map("_id") @db.ObjectId
  title        String
  description  String
  date         DateTime
  time         String
  location     String
  agenda       String
  organizerId  String
  chamaaId     String
  status       String   @default("Scheduled")
}
